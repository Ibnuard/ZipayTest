<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:paddingVertical="18dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"/>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_marginHorizontal="2dp">
                <LinearLayout
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer from Doni"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <ImageView
                            android:id="@+id/goIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_black"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@id/goIcon"
                            android:paddingHorizontal="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Rp20.000"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlue"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 AM"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_marginHorizontal="2dp">
                <LinearLayout
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer to Jesika"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <ImageView
                            android:id="@+id/goIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_black"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@id/goIcon2"
                            android:paddingHorizontal="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-Rp10.000"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorOrange"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 AM"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_marginHorizontal="2dp">
                <LinearLayout
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLN Prepaid"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <ImageView
                            android:id="@+id/goIcon3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_black"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@id/goIcon3"
                            android:paddingHorizontal="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-Rp100.000"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorOrange"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 AM"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 November 2019"/>
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_marginHorizontal="2dp">
                <LinearLayout
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Up From Bank BCA"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <ImageView
                            android:id="@+id/goIcon4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_black"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@id/goIcon4"
                            android:paddingHorizontal="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Rp1.000.000"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlue"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TopUp"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.15 AM"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="2dp">
                <LinearLayout
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer from Doni"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <ImageView
                            android:id="@+id/goIcon5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_next_black"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_toLeftOf="@id/goIcon5"
                            android:paddingHorizontal="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+Rp20.000"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlue"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive"/>
                    <TextView
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 AM"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>